tztime local {
    format = "%d/%m/%y  %H:%M:%S"
}

general {
    output_format = "i3bar"
    interval = 1
}

order += "tztime local"
order += "battery 0"

battery 0 {
    format = "%percentage"
    integer_battery_capacity = true
    last_full_capacity = true
    path = "/sys/class/power_supply/BAT1/uevent"
    low_threshold = 20
}


